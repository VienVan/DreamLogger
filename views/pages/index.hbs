<div class='container-fluid'>

  <div id='logo'>
    <h1 class='dreamcatcher'>Dream C<span class='a'>a</span>tcher</h1>
    <h3 class='know'><em><strong class='a'>Capture</strong></em> Your Dreams</h3>
  </div>
    <div class='phone-buttons'>
      <div id="home-btns">
        <button class="create_btn btn btn-success" id="get-started" data-toggle='modal' data-target="#signup">Get Started</button><br><br>
        <button class="btn btn-success" id="login">Log In</button>
      </div>
    </div>
    <div class='about-us'>
      {{> about}}
    </div>
</div>

<!-- Button trigger modal -->




<div class="crossfade">
  <figure class='overlay'></figure>
  <figure class='overlay'></figure>
  <figure class='overlay'></figure>
  <figure class='overlay'></figure>
  <figure class='overlay'></figure>
</div>

<div class="login hidden">
  <form id="Login-form" action="/sessions" method="POST">
      <div class='form-group'>
        <input type="text" name="dreamer[username]" placeholder="Username" class="form-control" autofocus>
      </div>
      <div class='form-group'>
        <input type="password" name="dreamer[password]" placeholder="Password" class="form-control" >
      </div>
      <div class='form-group'>
        <input type="submit" value='Log In' class="btn btn-success form-control">
      </div>
    </form>
  <button class="btn btn-danger cancelLogin cancel">Cancel</button>
</div>



<div class="modal fade" tabindex="-1" id="signup" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Let us capture your dreams!</h4>
      </div>
      <div class="modal-body">
        <div class='signup'>
        <form id="Signup-form" action="/dreamers" method="POST">
            <div class='form-group'>
              <input type="text" name="dreamer[username]" placeholder="Username" class="form-control" >
            </div>
            <div class='form-group'>
              <input type="password" name="dreamer[password_digest]" placeholder="Password" class="form-control" >
            </div>
            <div class='form-group'>
              <input type="submit" value='Start Dreaming' class="create_btn btn btn-success form-control">
            </div>
            <div class="form-group uploader-normal-button">
              <input type="hidden" role="uploadcare-uploader" name="dreamer[img]" class='form-control'/>
            </div>
          </form>

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class='about-us hidden'>
  {{> about}}
</div>

{{> footer}}
